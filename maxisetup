    dark_mode_logo_file="${DATA_PATH}/maxisetup/storage/os/${DISTRO_ID}/usr/local/directadmin/logo/dark_mode_logo.png"
    dark_mode_logo_file_home="/home/tmp/logo2.png$(get_rnd_alpha 6)"

