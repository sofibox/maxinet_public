_APP_SPECIFIC_NAME="Maxinet"
# Note some minor versions are not published
_APP_VERSION="0.5.7.4"
_APP_STATUS="alpha"
_APP_VERSION_STATUS="${_APP_VERSION}-${_APP_STATUS}"

### START TEMPORARY NOTE

