    ###
    # TODO
    ###

    echo ""
    check_finish_reboot "${func_name}"
  else
    _echo "$(msg yellow)[Skipped by system]: $(msg magenta)${func_name}()$(msg end) $(msg yellow)with current option ${option} has ran before $(msg end)" --name
