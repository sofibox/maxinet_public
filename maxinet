    # Debug:
    while [ ${count_n} -le "${da_admin_usernames_count}" ]; do

      echo "=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=" 2>&1 | tee -a "${REPORT_FILE}"
      echo "count_n INDEX = ${count_n}" 2>&1 | tee -a "${REPORT_FILE}"
      echo "" 2>&1 | tee -a "${REPORT_FILE}"
